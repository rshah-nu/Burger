<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
            <img src="/assets/images/burger.png" alt="burger" />
            <h1> Eat-Da-Burger! </h1>
        </div>
        <div class="col-xs-6 text-center" class="task">
            <h1>Edible</h1>
            <div class="row">
                {{#each burger_data}}
                    {{#unless this.devoured}}
                        <div class="col-xs-9 text-center">
                            <pre>
                                {{this.id}}. {{this.burger_name}}
                            </pre>
                        </div>
                        <div class="col-xs-3 text-center">
                            <form class="devour-form button-size">
                                <input input type="hidden" class="burger_id" type="text" burgerID={{this.id}}>
                                <br>
                                <button type="submit" class="btn btn-default devourBtn" burgerID={{this.id}}>Devour it!</button>
                            </form>
                        </div>
                    {{/unless}}
                {{/each}}
            </div>
        </div>
        <div class="col-xs-6 text-center" class="task">
            <h1>Devoured</h1>
            {{#each burger_data}}
                {{#if this.devoured}}
                    <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center enter_section">
            <form action="/api/new" method="POST">
                <input type="text" class="form-control" name="burgerName" value="" id="enter_text">
                <button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
            </form>
            <p>Enter a burger you want to eat Click the "Submit" button.</p>
        </div>
    </div>
</div>